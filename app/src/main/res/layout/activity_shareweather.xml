<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/shareweather_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@mipmap/home_bg3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/share_share_Iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/home_bg1"/>

            <ImageView
                android:id="@+id/share_qrema"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/ui_30_dip"
                android:layout_marginTop="30dp"
                android:src="@mipmap/qrcode" />

            <TextView
                android:text="霾太-七天雾霾预报"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textColor="@color/white"
                android:layout_below="@+id/share_qrema"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                 android:layout_marginRight="@dimen/ui_8_dip"
                android:textSize="12dp"
                android:layout_marginTop="3dp" />
        </RelativeLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/share_down_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent3"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/share_weixin_lay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_share_bg"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/ui_5_dip"
                android:src="@mipmap/share_wxpy" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ui_5_dip"
                android:gravity="center"
                android:text="@string/share_weixin"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_quan_lay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_share_bg"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/ui_5_dip"
                android:src="@mipmap/sharer_weixin" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ui_5_dip"
                android:gravity="center"
                android:text="@string/share_pyq"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>