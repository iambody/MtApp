<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/comment_item_detail_view_up_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:textColor="@color/white"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/comment_item_detail_view_center_iv"
        android:layout_width="@dimen/ui_28_dip"
        android:layout_height="@dimen/ui_28_dip"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/comment_item_detail_view_down_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="12dp" />
</LinearLayout>
